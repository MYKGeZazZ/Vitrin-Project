<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Vitrin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
        <item name="android:textViewStyle">@style/VazirTextStyle</item>
        <item name="android:buttonStyle">@style/VazirButtonStyle</item>
        <item name="materialButtonStyle">@style/VazirButtonStyle</item>
        <item name="textInputStyle">@style/VazirInputStyle</item>
        <item name="materialAlertDialogTheme">@style/RoundedMaterialDialog</item>
        <item name="alertDialogTheme">@style/RoundedMaterialDialog</item>
        <item name="bottomSheetDialogTheme">@style/FinalBottomSheetDialogTheme</item>
    </style>

    <style name="RoundedMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Vitrin.Dialog</item>
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
        <item name="android:itemTextAppearance">@style/DialogItemTextStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="FinalBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FinalBottomSheetStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="FinalBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DialogBodyStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DialogItemTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ShapeAppearance.Vitrin.Dialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="VazirTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/vazir</item>
    </style>

    <style name="VazirButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
    </style>

    <style name="VazirInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">@font/vazir</item>
        <item name="fontFamily">@font/vazir</item>
    </style>
</resources>